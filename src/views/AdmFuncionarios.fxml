<AnchorPane fx:id="ap_root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdmFuncionariosController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="60.0" style="-fx-background-color: #295A8C;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="lbl_titulo2" minHeight="50.0" prefHeight="50.0" style="-fx-text-fill: #FFFFFF;" styleClass="card-subtitle" text="Administrar Funcionarios" textFill="WHITE">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <VBox fx:id="vb_primer_paso" alignment="TOP_CENTER" AnchorPane.topAnchor="60.0">
         <children>
            <HBox fx:id="hb_cabecera1" alignment="CENTER_LEFT" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <VBox>
                     <children>
                        <Label text="Buscar Funcionario" />
                        <TextField fx:id="tf_busqueda" minWidth="250.0" />
                     </children>
                  </VBox>
                  <Button fx:id="btn_eliminar" mnemonicParsing="false" text="Eliminar" />
                  <Button fx:id="btn_respaldar" mnemonicParsing="false" text="Respaldar" />
               </children>
            </HBox>
            <TableView fx:id="tv_funcionarios" prefHeight="490.0">
               <columns>
                  <TableColumn fx:id="tc_check" prefWidth="53.0" sortable="false" />
                  <TableColumn fx:id="tc_num" prefWidth="53.0" sortable="false" text="#" />
                  <TableColumn fx:id="tc_nombre" prefWidth="350.0" sortable="false" text="Nombre" />
                  <TableColumn fx:id="tc_ci" minWidth="0.0" prefWidth="100.0" sortable="false" text="CI" />
               </columns>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </TableView>
            <HBox>
               <children>
                  <Label style="-fx-padding: 5 0 0 0;" styleClass="control-label" text="Selecciona una copia de respaldo" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox fx:id="hb_cargar_respaldo" alignment="CENTER" styleClass="hand">
                     <children>
                        <Label fx:id="ic_cargar" styleClass="icon" text="X" />
                        <Label text="Cargar respaldo ..." />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
